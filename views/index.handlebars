<title>Eat-Da-Burger!</title>
<ul>
    {{#each burgers}}

    {{/each}}
    </ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Burgeryum?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Burgeryum!<br>
    <input type="radio" name="burgeryum" value="0"> Burger
  </div>

  <button type="submit">Add Burger</button>
</form>
