<div class="container">

  <div class="row">
    <div class="col-sm-12 text-center d1" id="top-bar">
      <img src="./assets/img/burger.jpg" alt="Eat-Da-Burger App">
      <br>
      <h1>Eat-Da-Burger!</h1>
      <br> <br>
    </div>
  </div>
  <!-- end .row -->

  <div class="row">
    <div class="col-sm-6 text-center display">

      <br>
      <h2>Burgers Available To Eat!</h2>

      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li>
          {{this.id}}
          {{this.burger_name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button class="btn-primary" type="submit">Devour It!</button>
          </form>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-6 text-center" class="task">
      <h2>Burgers That Have Been Eaten!</h2>

      {{#each burgers}}
      {{#if this.devoured}}
      <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
      {{!-- <li>
        {{this.id}}
        {{this.burger_name}}

      </li> --}}
      {{/if}}
      {{/each}}

    </div>
  </div>
  <!-- end .row -->

  <div class="row">
    <div class="center col-sm-12 text-center enter_section">
      <h2>Add a Burger!</h2>
      <form class="create-update-form" action="/api/burgers" method="POST">

        <div class="form-group">
          <p>Enter a burger you want to order and click the Submit Order button.</p>
          <input type="text" class="form-control form-control-lg d3" name="burger_name" value="" id="enter_text">
          
         <input type="hidden" class="form-control form-control-lg d3" name="devoured" value="0" id="devoured_text">

        </div>
        <button class="btn-primary" type="submit">Submit Order</button>
      </form>
    </div>
  </div>
  <!-- end .row -->
</div>