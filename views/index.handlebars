<div class="container">
	
	<div class="row">
		<div class="col-md-12 text-center d1" id="top-bar">
			<img src="./assets/img/burger.jpg" alt="burger1">
			<br> <br> <br>
			<h2> Eat-Da-Burger! </h2>
			<br> <br>
		</div>

		<!-- ****************************************** -->
		<div class="col-md-6 text-center d2 task">

			<div class="row">
				<h4>Burgers Available To Eat!</h4>

				{{#each burger_data}}
				{{#unless this.devoured}}
				<div class="col-md-12 text-center display">

					<p class="ab">{{this.id}}. {{this.burger_name}}</p>

					<form class="devour-form button-size">
						<input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-danger btn-sm">DEVOURED IT!</button>
					</form>
				</div>
				{{/unless}}
				{{/each}}
			</div>
		</div>
		<div class="col-md-6 text-center task">
			<h4>Burgers That Have Been Eaten!</h4>
			{{#each burger_data}}
			{{#if this.devoured}}
			<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
			{{/if}}
			{{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12 text-center enter_section">
			<form name="burger" action="/burgers/create" method="POST" onsubmit="return validateOrder()">
				<input type="text" class=" form-control form-control-lg d3" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
			<p>Enter and Click "Submit" to order the burger you want to eat .</p>
		</div>
	</div>
</div>